<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RecipeApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">#C1B9B9</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="actionModeBackground">@color/contextualActionBarColor</item>
    </style>

    //for splash screen
    <style name="SplashScreenStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>


    // Custom Chip Style
    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name = "chipBackgroundColor">@color/chip_background_color</item>
        <item name = "android:textColor">@color/chip_text_color</item>
        <item name = "checkedIconTint">@color/chip_text_color</item>
    </style>


    <style name="DetailsActivityStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">#4C04EF</item>
        <item name="colorAccent">#9676DD</item>
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="android:statusBarColor">#4710C3</item>
    </style>

    <style name="CustomTableLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="background">@color/actionBarBackgroundColor</item>
        <item name="tabIndicatorColor">#FFFFFF</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabSelectedTextColor">#FFFFFF</item>
    </style>
    
    <style name="CustomTabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">#FFFFFF</item>
    </style>


</resources>